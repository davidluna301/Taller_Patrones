<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" fx:controller="com.facturacion.vista.FXMLController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" spacing="10">
            <Label text="Sistema de FacturaciÃ³n" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            
            <Label text="Nombre del Cliente:"/>
            <TextField fx:id="nombreClienteField" prefWidth="300"/>
            
            <Label text="Contacto del Cliente:"/>
            <TextField fx:id="contactoClienteField" prefWidth="300"/>
            
            <Label text="Producto/Servicio:"/>
            <TextField fx:id="productoField" prefWidth="300"/>
            
            <Label text="Precio Unitario:"/>
            <TextField fx:id="precioField" prefWidth="300"/>
            
            <Label text="Cantidad/Horas:"/>
            <TextField fx:id="cantidadField" prefWidth="300"/>
            
            <Label text="Tipo de Factura:"/>
            <ComboBox fx:id="tipoFacturaCombo" prefWidth="300">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="PRODUCTO"/>
                        <String fx:value="SERVICIO"/>
                    </FXCollections>
                </items>
            </ComboBox>
            
            <Button text="Crear Factura" onAction="#crearFactura" prefWidth="300" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button text="Guardar Factura" onAction="#guardarFactura" prefWidth="300" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            <Button text="Imprimir Factura" onAction="#imprimirFactura" prefWidth="300" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
            <Button text="Mostrar Facturas" onAction="#mostrarFacturas" prefWidth="300" style="-fx-background-color: #9C27B0; -fx-text-fill: white;"/>
            
            <Label fx:id="resultadoLabel" text="" style="-fx-text-fill: green;"/>
        </VBox>
    </children>
</AnchorPane>